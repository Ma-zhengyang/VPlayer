<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <SurfaceView
        android:id="@+id/floating_surface_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <com.android.mazhengyang.vplayer.view.FloatingPlayerButton
        android:id="@+id/btn_backActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_btn_floating_back"
        android:visibility="invisible" />

    <com.android.mazhengyang.vplayer.view.FloatingPlayerButton
        android:id="@+id/btn_closeFloatView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_btn_floating_close"
        android:visibility="invisible" />

    <com.android.mazhengyang.vplayer.view.FloatingPlayerButton
        android:id="@+id/btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_btn_floating_pause"
        android:visibility="invisible" />

</RelativeLayout>
